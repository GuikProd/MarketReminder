{% extends 'base.html.twig' %}

{% block title %}
    {{ presenter.page.title.value }}
{% endblock %}

{% form_theme presenter.form 'form/themes/security/_login_theme.html.twig' %}

{% block body %}
    <section>
        <div class="mk-main__center">
            <h2>
                {{ presenter.page.title.value }}
            </h2>
        </div>
        {{ form(presenter.form) }}
    </section>
    <section class="mk-main__container">
        <a href="{{ path('web_registration') }}">
            {{ presenter.content.registration_link.value }}
        </a>
    </section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('build/login.js') }}"></script>
{% endblock %}