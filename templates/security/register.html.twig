{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('build/registration.css') }}" />
{% endblock %}

{% block body %}
    {{ parent() }}
    <section class="registration-bloc">
        {% form_theme registerForm 'form/themes/_registerTypeTheme.html.twig' %}
