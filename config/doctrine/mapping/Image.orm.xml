<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping">
    <entity name="App\Domain\Models\Image" table="marketReminder_image" repository-class="App\Repository\ImageRepository">
        <id name="id" type="string" column="id"/>
        <field name="creationDate" type="integer" nullable="false" unique="true" />
        <field name="modificationDate" type="integer" nullable="false" unique="true" />
        <field name="alt" type="string" length="50" unique="true" nullable="false" />
        <field name="url" type="string" length="200" nullable="false" unique="true" />
        <one-to-one field="user" target-entity="App\Domain\Models\User" inversed-by="profileImage">
            <join-column name="user_id" referenced-column-name="id" />
        </one-to-one>
    </entity>
</doctrine-mapping>
