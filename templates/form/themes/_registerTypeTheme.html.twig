{% block form %}
    <div class="mdl-grid contact-form">
        <div class="mdl-cell mdl-cell--12-col mdl-card mdl-shadow--4dp">
            <div class="mdl-card__title">
                <h2 class="mdl-card__title-text">
                    {{ "account.creation"|trans }}
                </h2>
            </div>
            <div class="mdl-card__media">
            </div>
            <div class="mdl-card__supporting-text">
                {{ form_start(form) }}
                {{ form_errors(form) }}

                {{- form_row(form.username) -}}
                {{- form_row(form.email) -}}
                {{- form_row(form.password) -}}

                <div class="mdl-textfield mdl-js-textfield mdl-textfield--file">
                    <input class="mdc-text-field__input" placeholder="{{ "image.text"|trans }}" type="text" id="uploadFile" readonly/>
                    <div class="mdl-button mdl-button--primary mdl-button--icon mdl-button--file">
                        <i class="material-icons">attach_file</i>
                        {{- form_row(form.profileImage) -}}
                    </div>
                </div>
                <div>
                    <button class="mdc-button mdc-button--raised mdc-elevation--z4">
                        {{ "account.creation"|trans }}
                    </button>
                </div>
                {{ form_end(form) }}
                <p class="registration-bloc__login-text">
                    <a href="{{ path('web_login') }}">{{ "account.already_exist"|trans }}</a>
                </p>
            </div>
        </div>
    </div>
{% endblock %}

{% block form_row %}
    <div class="mdc-text-field mdc-text-field--fullwidth">
        {{ form_widget(form, {'attr': {'class': 'mdc-text-field__input'}}) }}
        {{ form_errors(form, {'attr': {'class': 'mdl-textfield__error'}}) }}
    </div>
{% endblock %}
