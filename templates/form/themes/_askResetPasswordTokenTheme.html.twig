{% block form %}
    <div class="mdl-grid">
        <div class="mdl-cell mdl-cell--12-col mdl-card mdl-shadow--4dp">
            <div class="mdl-card__title">
                <h2 class="mdl-card__title-text">
                    {{ "security.resetPasswordToken_header"|trans }}
                </h2>
            </div>
            <div class="mdl-card__media">
            </div>
            <div class="mdl-card__supporting-text">
                {{ form_start(form) }}
                {{ form_errors(form) }}
                {{- form_row(form.username) -}}
                {{- form_row(form.email) -}}
                <p>
                    <button type="submit" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent">
                        {{ "security.resetPasswordToken"|trans }}
                    </button>
                </p>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block form_row %}
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        {{ form_label(form, '', {'label_attr': {'class': 'mdl-textfield__label'}}) }}
        {{ form_widget(form, {'attr': {'class': 'mdl-textfield__input'}}) }}
        {{ form_errors(form, {'attr': {'class': 'mdl-textfield__error'}}) }}
    </div>
{% endblock %}
