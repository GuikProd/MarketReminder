{% block form %}
    {{ form_start(form) }}
        {{ form_row(form.username) }}
        {{ form_row(form.email) }}
        <div class="mk-button__container">
            <button type="reset" class="mdc-button {{ form.vars.id~'_'~'button--cancel' }}">
                {{ 'main.button_cancel'|cloudTranslate('button', app.request.locale) }}
            </button>
            <button type="submit" class="mdc-button mdc-button--raised mdc-elevation--z4 {{ form.vars.id~'_'~'button--submit' }}">
                {{ "login.button"|cloudTranslate('button', app.request.locale) }}
            </button>
        </div>
    {{ form_end(form) }}
{% endblock %}
