<!DOCTYPE html>
<html amp lang="{{ app.request.locale }}">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width,minimum-scale=1,initial-scale=1">
        <meta name="theme-color" content="#ffb300" />
        <title>MarketReminder - {% block title %}{% endblock %}</title>
        <link rel="apple-touch-icon" sizes="57x57" href="{{ asset('icons/apple-icon-57x57.png') }}" />
        <link rel="apple-touch-icon" sizes="60x60" href="{{ asset('icons/apple-icon-60x60.png') }}" />
        <link rel="apple-touch-icon" sizes="72x72" href="{{ asset('icons/apple-icon-72x72.png') }}" />
        <link rel="apple-touch-icon" sizes="76x76" href="{{ asset('icons/apple-icon-76x76.png') }}" />
        <link rel="apple-touch-icon" sizes="114x114" href="{{ asset('icons/apple-icon-114x114.png') }}" />
        <link rel="apple-touch-icon" sizes="120x120" href="{{ asset('icons/apple-icon-120x120.png') }}" />
        <link rel="apple-touch-icon" sizes="144x144" href="{{ asset('icons/apple-icon-144x144.png') }}" />
        <link rel="apple-touch-icon" sizes="152x152" href="{{ asset('icons/apple-icon-152x152.png') }}" />
        <link rel="apple-touch-icon" sizes="180x180" href="{{ asset('icons/apple-icon-180x180.png') }}" />
        <link rel="icon" type="image/png" sizes="192x192" href="{{ asset('icons/android-icon-192x192.png') }}" />
        <link rel="icon" type="image/png" sizes="32x32" href="{{ asset('icons/favicon-32x32.png') }}" />
        <link rel="icon" type="image/png" sizes="96x96" href="{{ asset('icons/favicon-96x96.png') }}" />
        <link rel="icon" type="image/png" sizes="16x16" href="{{ asset('icons/favicon-16x16.png') }}" />
        <link rel="icon" href="{{ asset('favicon.ico') }}" />
        <meta name="msapplication-TileColor" content="#ffffff">
        <meta name="msapplication-TileImage" content="{{ asset('icons/ms-icon-144x144.png') }}">
        <meta name="theme-color" content="#ffffff">
        <link rel="stylesheet" href="{{ asset('build/app-shell.css') }}" />
        {% block stylesheets %}
            <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
            <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
            <link rel="stylesheet" href="{{ asset('build/core.css') }}" />
        {% endblock %}
        <link rel="manifest" href="{{ asset('manifest.json') }}" />
    </head>
    <body class="main">
        {% block navigation %}
            <header class="mdc-top-app-bar mdc-top-app-bar--fixed mdc-elevation--z2">
                <div class="mdc-top-app-bar__row">
                    <section class="mdc-top-app-bar__section mdc-top-app-bar__section--align-start">
                        <a href="#" class="material-icons mdc-top-app-bar__navigation-icon" id="aside_menu">menu</a>
                        <span class="mdc-top-app-bar__title">MarketReminder</span>
                    </section>
                    <section class="mdc-top-app-bar__section mdc-top-app-bar__section--align-end" role="toolbar">
                        <a href="{{ path('index') }}" class="material-icons mdc-top-app-bar__action-item" aria-label="home" alt="{{ 'home.text'|cloudTranslate('messages', app.request.locale) }}">
                            home
                        </a>
                        {% if is_granted('ROLE_USER') %}
                            <a href="{{ path('dashboard_home') }}" class="material-icons mdc-top-app-bar__action-item" aria-label="dashboard" alt="{{ 'home.text'|cloudTranslate('messages', app.request.locale) }}">
                                dashboard
                            </a>
                        {% else %}
                            <a href="{{ path('web_login') }}" class="material-icons mdc-top-app-bar__action-item" aria-label="person" alt="{{ 'home.text'|cloudTranslate('messages', app.request.locale) }}">
                                person
                            </a>
                        {% endif %}
                    </section>
                </div>
            </header>
            <aside class="mdc-drawer mdc-drawer--temporary mdc-typography">
                <nav class="mdc-drawer__drawer">
                    <header class="mdc-drawer__header">
                        <div class="mdc-drawer__header-content">
                            MarketReminder
                        </div>
                    </header>
                    <nav id="icon-with-text-demo" class="mdc-drawer__content mdc-list">
                        <a class="mdc-list-item" aria-label="home" href="{{ path('index') }}">
                            <i class="material-icons mdc-list-item__graphic" aria-hidden="true">home</i>{{ 'home.text'|cloudTranslate('messages', app.request.locale) }}
                        </a>
                        {% if is_granted('ROLE_USER') %}
                            <a class="mdc-list-item" aria-label="dashboard" href="{{ path('dashboard_home') }}">
                                <i class="material-icons mdc-list-item__graphic" aria-hidden="true">dashboard</i>{{ 'dashboard.title'|cloudTranslate('messages', app.request.locale) }}
                            </a>
                            <a class="mdc-list-item" aria-label="list" href="{{ path('dashboard_stock_listing') }}">
                                <i class="material-icons mdc-list-item__graphic" aria-hidden="true">list</i>{{ 'dashboard.stock_list.title'|cloudTranslate('messages', app.request.locale) }}
                            </a>
                            <a class="mdc-list-item" aria-label="perm_identity" href="{{ path('logout') }}">
                                <i class="material-icons mdc-list-item__graphic" aria-hidden="true">perm_identity</i>{{ 'logout.title'|cloudTranslate('messages', app.request.locale) }}
                            </a>
                        {% else %}
                            <a class="mdc-list-item" aria-label="person" href="{{ path('web_login') }}">
                                <i class="material-icons mdc-list-item__graphic" aria-hidden="true">person</i>{{ 'login.title'|cloudTranslate('messages', app.request.locale) }}
                            </a>
                        {% endif %}
                    </nav>
                </nav>
            </aside>
        {% endblock %}
        <div class="mdc-layout-grid">
            <div class="mdc-layout-grid__inner">
                <div class="mdc-layout-grid__cell--span-12">
                    <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-12 layout">
                        {% for success in app.flashes('success') %}
                            <div id="snackbar-content">
                                <p>{{ success }}</p>
                            </div>
                        {% endfor %}
                        {% for failure in app.flashes('failure') %}
                            <div id="snackbar-content">
                                <p>{{ failure }}</p>
                            </div>
                        {% endfor %}
                        <!-- Main body -->
                        {% block body %}{% endblock %}

                        <!-- User notification -->
                        <div class="mdc-snackbar mdc-snackbar--align-start"
                             aria-live="assertive"
                             aria-atomic="true"
                             aria-hidden="true">
                            <div class="mdc-snackbar__text"></div>
                            <div class="mdc-snackbar__action-wrapper">
                                <button type="button" class="mdc-snackbar__action-button"></button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% block javascripts %}
            <script src="{{ asset('build/navigation.js') }}"></script>
            <script src="{{ asset('build/mc.js') }}"></script>
            <script src="{{ asset('build/webcomponents/custom-elements-es5-adapter.js') }}"></script>
            <script src="{{ asset('build/webcomponents/webcomponents-bundle.js') }}"></script>
            <script src="{{ asset('build/webcomponents/webcomponents-loader.js') }}"></script>
            <script src="{{ asset('build/snackbar.js') }}"></script>
            <script src="{{ asset('build/serviceWorker.js') }}"></script>
            <script src="{{ asset('build/snackbar.js') }}"></script>
            <script src="{{ asset('build/snackbar_polymer.js') }}"></script>
        {% endblock %}
    </body>
</html>
