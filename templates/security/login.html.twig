{% extends 'base.html.twig' %}

{% block title %}
    {{ presenter.page.title.value }}
{% endblock %}

{% form_theme presenter.viewOptions.form 'form/themes/security/_login_theme.html.twig' %}

{% block body %}
    <section>
        {{ form(presenter.viewOptions.form) }}
    </section>
    <section class="mk-main__container">
        <a href="{{ path('web_registration') }}">
            {{ "Create an account ?" }}
        </a>
    </section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('build/login.js') }}"></script>
{% endblock %}
